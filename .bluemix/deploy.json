{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "vsi-host": {
            "type": "string",
            "description": "IP Address for your VSI instance"
        },
        "private-key": {
            "type": "textarea",
            "description": "SSH Private Key for accessing the VSI instance"
        }
    },
    "required": [
        "vsi-host",
        "private-key"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "vsi-host"
        },
        {
            "type": "textarea",
            "readonly": false,
            "title": "private-key"
        }
    ]
}
