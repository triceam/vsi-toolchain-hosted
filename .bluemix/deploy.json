{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "vsi-host": {
            "type": "string"
        },
        "private-key": {
            "type": "string"
        },
        "api-key": {
            "type": "string"
        }
    },
    "required": [
        "vsi-host",
        "private-key",
        "api-key"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.vsi-host"
            },
            "key": "vsi-host"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.private-key"
            },
            "key": "private-key"
        },
        {
	        "type": "password",
	        "readonly": false,
	        "title": {
                   "$ref": "#/messages/deploy.apiKeyTitle"
                },
	        "key": "api-key"
        }
    ]
}
